  <div class="page-wrap">
    <div class="banner" style="background-image: url(<%= asset_path('cinema-banner.jpeg') %>);">
      <div class="banner-title">
        <h1 class="text-center"><%= @list.name %></h1>
      </div>
    </div>

    <div class="container mt-2">
      <div>
        <%= link_to 'add a movie', new_list_bookmark_path(@list), class: 'btn btn-secondary' %>
      </div>
      <h2 class="text-center">My <%= @list.name %> list</h2>
      <p class="text-center"><em><%= "No movies on your list!" if @list.movies.empty? %></em></p>
      <div class="row mt-4">
        <% @list.movies.each do |movie| %> <%# List has many movies. @list.movies  %>
          <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
          <div class="col-4">
            <div class="card mb-4 h-100">
              <%= image_tag movie.poster_url, alt: movie.title, class: 'movie-img' %>
                <div class="card-body">
                  <h5 class="card-title">
                    <%= movie.title %>
                    <span class="text-muted font-weight-normal">â€¢ <%= movie.rating %>
                    <i class="fas fa-star star-yellow"></i>
                  </h5>
                  <p class="card-text"><%= movie.overview %></p>
                  <p class="card-text">"<small class="text-muted"><%= bookmark.comment %></small>"</p>
                  <small class="text-right flex-shrink-0">
                    <%= link_to 'Delete', bookmark_path(bookmark), method: :delete, class: 'text-danger' %>
                  </small>
                </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
