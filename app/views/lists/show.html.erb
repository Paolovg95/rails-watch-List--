  <div class="page-wrap">
    <div class="banner" style="background-image: url(<%= cl_image_path("felix-mooneeram-evlkOfkQ5rE-unsplash_a7h2lt")%>);">
      <p class="text-center"><%= @list.name %></h1>
    </div>

    <div class="categories mt-2">
      <div>
        <%= link_to 'Add a movie', new_list_bookmark_path(@list),class: "btn btn-outline-warning border-none mt-3 mr-3 px-5" %>
      </div>
      <p class="text-center">My <%= @list.name %> list</p>
      <p class="text-center"><em><%= "No movies on your list!" if @list.movies.empty? %></em></p>
      <div class="row movies">
        <% @list.movies.each do |movie| %>
          <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
          <div class="col-4">
            <div class="card mb-2 h-80">
              <%= image_tag  movie.poster_url, alt: movie.title, class: 'movie-img'%>
                <div class="card-body">
                  <h5 class="card-title">
                    <%= movie.title %>
                    <span class="text-muted font-weight-normal">â€¢ <%= movie.rating %>
                    <i class="fas fa-star star-yellow"></i>
                  </h5>
                  <p class="card-text"><%= movie.overview %></p>
                  <p class="card-text">"<small class="text-muted"><%= bookmark.comment %></small>"</p>
                  <small class="text-right flex-shrink-0">
                    <%= link_to 'Delete', bookmark_path(bookmark), method: :delete, class: 'text-danger' %>
                  </small>
                </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
